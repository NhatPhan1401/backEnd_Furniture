{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.{ts,json}",
      "use": "@vercel/node",
      "config": {
        "installCommand": "yarn install",
        "buildCommand": "yarn build",
        "startCommand": "yarn start"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/index.ts"
    }
  ],
  "env": {
    "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\"}"
  },
  "build": {
    "env": {
      "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\"}"
    }
  }
}
